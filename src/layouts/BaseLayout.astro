---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title = 'PowerBI.tips', description = 'PowerBI.tips blog and resources.', fullWidth = false, jsonLd } = Astro.props;

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// Default Organization + WebSite schema (included on every page)
const orgSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'PowerBI.tips',
  url: 'https://powerbi.tips',
  logo: `https://powerbi.tips${base}/favicon.svg`,
  description: 'The leading independent resource for Microsoft Power BI and Microsoft Fabric professionals. Tutorials, developer tools, podcast, and enterprise solutions.',
  founder: {
    '@type': 'Person',
    name: 'Mike Carlo',
    jobTitle: 'Owner',
    worksFor: { '@type': 'Organization', name: 'Carlo Solutions' },
  },
  sameAs: [
    'https://x.com/PowerBITips',
    'https://www.youtube.com/powerbitips',
  ],
};

const webSiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'PowerBI.tips',
  url: 'https://powerbi.tips',
  description,
  potentialAction: {
    '@type': 'SearchAction',
    target: 'https://powerbi.tips/search/?q={search_term_string}',
    'query-input': 'required name=search_term_string',
  },
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="PowerBI.tips RSS Feed" href={`${base}/rss.xml`} />
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(orgSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(webSiteSchema)} />
    {jsonLd && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />}
    <!-- Microsoft Clarity -->
    <script type="text/javascript">
      (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", "vgd3137d78");
    </script>
    <!-- Preconnect to external domains for faster resource loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://www.youtube.com" crossorigin />
    <link rel="preconnect" href="https://i.ytimg.com" crossorigin />
    <!-- DNS prefetch for additional domains -->
    <link rel="dns-prefetch" href="https://open.spotify.com" />
  </head>
  <body class="bg-white text-neutral-900 min-h-screen flex flex-col">
    <Header />
    <main class={`mx-auto w-full px-6 py-10 flex-grow ${fullWidth ? '' : 'max-w-6xl'}`}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
