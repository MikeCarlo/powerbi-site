---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const base = import.meta.env.BASE_URL;

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 6)
  .map((post) => ({
    ...post,
    slug: post.id.replace(/\/index\.mdx?$/, '').replace(/\.mdx?$/, '')
  }));
---

<BaseLayout title="PowerBI.tips" description="PowerBI.tips blog and resources." fullWidth={true}>
  <section class="mb-12">
    <h1 class="text-4xl font-semibold tracking-tight text-neutral-900">
      Act like the business, Think like I.T.
    </h1>
  </section>

  <section>
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold">Recent Posts</h2>
      <a class="text-sm font-semibold text-blue-600 hover:text-blue-700" href={`${base}search/`}>Search</a>
    </div>
    <div class="mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {posts.map((post) => (
        <article class="rounded-xl border border-neutral-200 p-5 transition hover:-translate-y-1 hover:shadow-lg">
          {post.data.featuredImage && (
            <a href={`${base}${post.slug}/`} class="block mb-4">
              <Image 
                src={post.data.featuredImage} 
                alt={post.data.title}
                class="w-full h-40 object-cover rounded-lg"
                width={400}
                height={225}
              />
            </a>
          )}
          <p class="text-xs font-semibold uppercase tracking-wide text-neutral-500">
            {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
          </p>
          <h3 class="mt-2 text-lg font-semibold">
            <a class="text-blue-600 hover:text-blue-700" href={`${base}${post.slug}/`}>
              {post.data.title}
            </a>
          </h3>
          {post.data.excerpt && <p class="mt-2 text-sm text-neutral-600">{post.data.excerpt}</p>}
          {post.data.categories?.length ? (
            <div class="mt-4 flex flex-wrap gap-2">
              {post.data.categories.map((category) => (
                <a 
                  href={`${base}category/${category.toLowerCase().replace(/\s+/g, '-')}/`}
                  class="rounded-full bg-neutral-200 px-3 py-1 text-xs font-medium text-neutral-700 hover:bg-blue-100 hover:text-blue-800 transition-colors"
                >
                  {category}
                </a>
              ))}
            </div>
          ) : null}
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
