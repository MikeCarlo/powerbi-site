---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const INITIAL_POSTS = 12;
const BATCH_SIZE = 12;

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .map((post) => ({
    ...post,
    slug: post.id.replace(/\/index\.mdx?$/, '').replace(/\.mdx?$/, '')
  }));

function plainTextExcerpt(value) {
  if (!value) return '';
  return String(value)
    // images: ![alt](url) → alt
    .replace(/!\[([^\]]*)\]\(([^)]+)\)/g, '$1')
    // links: [text](url) → text
    .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '$1')
    // strip headings/blockquote markers
    .replace(/^\s{0,3}#{1,6}\s+/gm, '')
    .replace(/^\s{0,3}>\s?/gm, '')
    // strip common inline markdown tokens
    .replace(/[*_`~]/g, '')
    // strip any HTML tags that might sneak in
    .replace(/<[^>]+>/g, '')
    // collapse whitespace
    .replace(/\s+/g, ' ')
    .trim();
}
---

<BaseLayout title="PowerBI.tips" description="PowerBI.tips blog and resources." fullWidth={true}>
  <section class="mb-12 text-center">
    <h1 class="text-4xl font-semibold tracking-tight text-neutral-900">
      Act like the business, Think like I.T.
    </h1>
  </section>

  <section>
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold">Recent Posts</h2>
      <a class="text-sm font-semibold text-blue-600 hover:text-blue-700" href={`${base}/search/`}>Search</a>
    </div>
    <div class="mt-6 grid gap-4 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6">
      {posts.map((post, index) => (
        <article
          class={`rounded-xl border border-neutral-200 p-4 transition hover:-translate-y-1 hover:shadow-lg ${index >= INITIAL_POSTS ? 'hidden' : ''}`}
          data-post-card
        >
          {post.data.featuredImage && (
            <a href={`${base}/${post.slug}/`} class="block mb-3">
              <Image
                src={post.data.featuredImage}
                alt={post.data.title}
                class="w-full aspect-video object-cover rounded-lg"
                width={320}
                height={180}
                loading={index === 0 ? "eager" : "lazy"}
                fetchpriority={index === 0 ? "high" : "auto"}
              />
            </a>
          )}
          <p class="text-xs font-semibold uppercase tracking-wide text-neutral-500">
            {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
          </p>
          <h3 class="mt-2 text-lg font-semibold">
            <a class="text-blue-600 hover:text-blue-700" href={`${base}/${post.slug}/`}>
              {post.data.title}
            </a>
          </h3>
          {post.data.excerpt && (
            <p class="mt-2 text-sm text-neutral-600">{plainTextExcerpt(post.data.excerpt)}</p>
          )}
          {post.data.categories?.length ? (
            <div class="mt-4 flex flex-wrap gap-2">
              {post.data.categories.map((category) => (
                <a
                  href={`${base}/category/${category.toLowerCase().replace(/\s+/g, '-')}/`}
                  class="rounded-full bg-neutral-200 px-3 py-1 text-xs font-medium text-neutral-700 hover:bg-blue-100 hover:text-blue-800 transition-colors"
                >
                  {category}
                </a>
              ))}
            </div>
          ) : null}
        </article>
      ))}
    </div>

    <div class="mt-8 flex justify-center">
      <button
        id="load-more-posts"
        type="button"
        class={`rounded-full bg-neutral-900 px-6 py-2 text-sm font-semibold text-white hover:bg-neutral-800 transition-colors ${posts.length > INITIAL_POSTS ? '' : 'hidden'}`}
      >
        More
      </button>
    </div>

    <script define:vars={{ initialPosts: INITIAL_POSTS, batchSize: BATCH_SIZE }}>
      (function () {
        const btn = document.getElementById('load-more-posts');
        if (!btn) return;

        // `initialPosts` + `batchSize` injected by Astro via define:vars
        let shown = initialPosts;

        function revealNextBatch() {
          const cards = Array.from(document.querySelectorAll('[data-post-card]'));
          const hidden = cards.filter((el) => el.classList.contains('hidden'));

          hidden.slice(0, batchSize).forEach((el) => el.classList.remove('hidden'));
          shown = cards.length - hidden.length + Math.min(batchSize, hidden.length);

          // Hide button when no more posts remain
          const remaining = cards.filter((el) => el.classList.contains('hidden')).length;
          if (remaining === 0) btn.classList.add('hidden');
        }

        btn.addEventListener('click', revealNextBatch);
      })();
    </script>
  </section>
</BaseLayout>