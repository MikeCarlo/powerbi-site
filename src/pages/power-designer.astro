---
import BaseLayout from '../layouts/BaseLayout.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="Power Designer | PowerBI.tips" description="Power Designer - generate themes, report pages, and up your style in Microsoft Fabric.">
  <section class="mb-12">
    <div class="mb-2">
      <Logo href={import.meta.env.BASE_URL} class="h-6 w-auto" alt="PowerBI.tips" />
    </div>
    <h1 class="mt-3 text-4xl font-semibold tracking-tight text-neutral-900">
      Power Designer
    </h1>
    <p class="mt-4 max-w-2xl text-lg text-neutral-600">
      Generate themes, report pages, and up your style in Microsoft Fabric.
    </p>
  </section>

  <section class="prose max-w-none">
    <p>More content coming soon...</p>
  </section>
</BaseLayout>
