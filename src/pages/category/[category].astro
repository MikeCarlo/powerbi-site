---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

function slugify(value: string): string {
  return value.toLowerCase().replace(/\s+/g, '-');
}

export async function getStaticPaths() {
  const slugifyCategory = (value: string): string => value.toLowerCase().replace(/\s+/g, '-');
  
  const posts = await getCollection('blog');
  const categories = new Set<string>();

  posts.forEach((post) => {
    post.data.categories?.forEach((category: string) => {
      categories.add(slugifyCategory(category));
    });
  });

  return Array.from(categories).map((category) => ({ params: { category } }));
}

const { category } = Astro.params;
const posts = (await getCollection('blog'))
  .filter((post) => post.data.categories?.some((cat) => slugify(cat) === category))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .map((post) => ({
    ...post,
    slug: post.id.replace(/\/index\.mdx?$/, '').replace(/\.mdx?$/, '')
  }));

const displayName = posts[0]?.data.categories?.find((cat) => slugify(cat) === category) ?? category;
---

<BaseLayout title={`${displayName} | PowerBI.tips`} description={`Posts in ${displayName}.`}>
  <h1 class="text-3xl font-semibold">{displayName}</h1>
  <p class="mt-2 text-neutral-600">Browse the latest posts tagged in this category.</p>

  <div class="mt-8 grid gap-6 md:grid-cols-2">
    {posts.map((post) => (
      <article class="rounded-xl border border-neutral-200 p-5">
        <p class="text-xs font-semibold uppercase tracking-wide text-neutral-500">
          {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
        </p>
        <h2 class="mt-2 text-lg font-semibold">
          <a class="text-blue-600 hover:text-blue-700" href={`${base}/${post.slug}/`}>
            {post.data.title}
          </a>
        </h2>
        {post.data.excerpt && <p class="mt-2 text-sm text-neutral-600">{post.data.excerpt}</p>}
      </article>
    ))}
  </div>
</BaseLayout>
