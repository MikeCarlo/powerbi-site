---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const recentPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3)
  .map((post) => ({
    ...post,
    slug: post.id.replace(/\/index\.mdx?$/, '').replace(/\.mdx?$/, '')
  }));

function plainTextExcerpt(value) {
  if (!value) return '';
  return String(value)
    .replace(/!\[([^\]]*)\]\(([^)]+)\)/g, '$1')
    .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '$1')
    .replace(/^\s{0,3}#{1,6}\s+/gm, '')
    .replace(/^\s{0,3}>\s?/gm, '')
    .replace(/[*_`~]/g, '')
    .replace(/<[^>]+>/g, '')
    .replace(/\s+/g, ' ')
    .trim();
}
---

<BaseLayout title="Page Not Found | PowerBI.tips" description="The page you're looking for doesn't exist.">
  <div class="flex flex-col items-center justify-center text-center py-20 px-4">
    <h1 class="text-6xl font-bold text-neutral-800">404</h1>
    <p class="mt-4 text-xl text-neutral-600">The page you're looking for doesn't exist or has moved.</p>
    <p class="mt-2 text-neutral-500">It might have been removed, renamed, or the URL may be incorrect.</p>

    <div class="mt-8 flex flex-col sm:flex-row gap-4">
      <a
        href={`${base}/`}
        class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition-colors"
      >
        ← Back to Home
      </a>
      <a
        href={`${base}/search/`}
        class="inline-flex items-center justify-center px-6 py-3 rounded-lg border border-neutral-300 text-neutral-700 font-semibold hover:bg-neutral-100 transition-colors"
      >
        Search the Site
      </a>
    </div>

    <div class="mt-12 text-neutral-400 text-sm">
      <p>Looking for something specific? Try one of these:</p>
      <div class="mt-3 flex flex-wrap justify-center gap-3">
        <a href={`${base}/podcast/`} class="text-blue-600 hover:underline">Podcast</a>
        <span class="text-neutral-300">·</span>
        <a href={`${base}/training/`} class="text-blue-600 hover:underline">Training</a>
        <span class="text-neutral-300">·</span>
        <a href={`${base}/about/`} class="text-blue-600 hover:underline">About</a>
      </div>
    </div>
  </div>

  <section class="pb-16 px-4">
    <h2 class="text-xl font-semibold text-center mb-6">Recent Posts</h2>
    <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 max-w-4xl mx-auto">
      {recentPosts.map((post, index) => (
        <article class="rounded-xl border border-neutral-200 p-4 transition hover:-translate-y-1 hover:shadow-lg">
          {post.data.featuredImage && (
            <a href={`${base}/${post.slug}/`} class="block mb-3">
              <Image
                src={post.data.featuredImage}
                alt={post.data.title}
                class="w-full aspect-video object-cover rounded-lg"
                width={320}
                height={180}
                loading="lazy"
              />
            </a>
          )}
          <p class="text-xs font-semibold uppercase tracking-wide text-neutral-500">
            {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
          </p>
          <h3 class="mt-2 text-lg font-semibold">
            <a class="text-blue-600 hover:text-blue-700" href={`${base}/${post.slug}/`}>
              {post.data.title}
            </a>
          </h3>
          {post.data.excerpt && (
            <p class="mt-2 text-sm text-neutral-600">{plainTextExcerpt(post.data.excerpt)}</p>
          )}
          {post.data.categories?.length ? (
            <div class="mt-4 flex flex-wrap gap-2">
              {post.data.categories.map((category) => (
                <a
                  href={`${base}/category/${category.toLowerCase().replace(/\s+/g, '-')}/`}
                  class="rounded-full bg-neutral-200 px-3 py-1 text-xs font-medium text-neutral-700 hover:bg-blue-100 hover:text-blue-800 transition-colors"
                >
                  {category}
                </a>
              ))}
            </div>
          ) : null}
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
