---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

const posts = await getCollection('blog');

// Group posts by author
const authorPosts = new Map<string, typeof posts>();

posts.forEach((post) => {
  const authors = post.data.authors || [];
  authors.forEach((author: string) => {
    if (!authorPosts.has(author)) {
      authorPosts.set(author, []);
    }
    authorPosts.get(author)!.push(post);
  });
});

// Sort authors alphabetically and sort their posts by date
const sortedAuthors = Array.from(authorPosts.entries())
  .sort(([a], [b]) => a.localeCompare(b))
  .map(([author, posts]) => ({
    author,
    posts: posts
      .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
      .map((post) => ({
        ...post,
        slug: post.id.replace(/\/index\.mdx?$/, '').replace(/\.mdx?$/, '')
      }))
  }));
---

<BaseLayout title="Authors | PowerBI.tips" description="All authors who have contributed to PowerBI.tips">
  <section class="mb-8">
    <h1 class="text-4xl font-semibold tracking-tight text-neutral-900">Authors</h1>
    <p class="mt-4 text-lg text-neutral-600">
      Meet the contributors behind PowerBI.tips content.
    </p>
  </section>

  <section class="space-y-6">
    {sortedAuthors.map(({ author, posts }) => (
      <details class="group rounded-xl border border-neutral-200 bg-white">
        <summary class="flex cursor-pointer items-center justify-between p-5 font-semibold text-neutral-900 hover:bg-neutral-50">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-600 font-bold">
              {author.charAt(0).toUpperCase()}
            </div>
            <div>
              <span class="text-lg">{author}</span>
              <span class="ml-2 text-sm text-neutral-500">({posts.length} post{posts.length !== 1 ? 's' : ''})</span>
            </div>
          </div>
          <svg class="h-5 w-5 text-neutral-400 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <div class="border-t border-neutral-100 p-5">
          <ul class="space-y-3">
            {posts.map((post) => (
              <li class="flex items-start gap-3">
                <span class="text-xs text-neutral-400 whitespace-nowrap pt-1">
                  {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
                </span>
                <a href={`${base}${post.slug}/`} class="text-blue-600 hover:text-blue-700 hover:underline">
                  {post.data.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </details>
    ))}
  </section>
</BaseLayout>
